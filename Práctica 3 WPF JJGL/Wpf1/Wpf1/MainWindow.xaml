<Window x:Class="Wpf1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="20">
            <Label FontWeight="Bold" FontSize="16" Margin="0,0,0,10">
                ¿Cuál es el jugador más viejo de pádel?
            </Label>

            <RadioButton x:Name="rbPaquito" Content="Paquito Navarro" Margin="0,2"/>
            <RadioButton x:Name="rbLebron" Content="Juan Lebrón" Margin="0,2"/>
            <RadioButton x:Name="rbGalan" Content="Galán" Margin="0,2"/>
            
            <Button x:Name="btnCorregir" Content="Corregir" Width="100" Margin="0,10,0,0"
                HorizontalAlignment="Left" Click="btnCorregir_Click"/>
        </StackPanel>
    </Grid>
</Window>
