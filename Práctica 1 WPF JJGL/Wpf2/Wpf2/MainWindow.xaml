<Window x:Class="Wpf2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button FontWeight="Bold" Padding="10">
            <WrapPanel>
                <TextBlock Text="Texto Verde" Foreground="Green" Padding="5"/>
                <TextBlock Text="Texto Azul" Foreground="Blue" Padding="5"/>
                <TextBlock Text="Texto Normal" Margin="5,0" Padding="5"/>
            </WrapPanel>
        </Button>
    </Grid>

</Window>
