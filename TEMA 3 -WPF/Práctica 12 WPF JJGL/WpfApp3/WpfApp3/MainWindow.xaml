<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="50">
        <Button Margin="0, 20, 0, 0" Height="30" Background="Red" Foreground="White" FontWeight="Bold" Click="Button_Click">CONECTAR CON LA BBDD</Button>
        <TextBox Margin="0, 30, 0, 0" Height="40" FontSize="20" x:Name="txtConexion"></TextBox>

        <Button Margin="0, 60, 0, 0" Height="50" Background="Green" Foreground="White" FontWeight="DemiBold" Click="Button_Click_1">MOSTRAR DATOS</Button>
    </StackPanel>
</Window>
