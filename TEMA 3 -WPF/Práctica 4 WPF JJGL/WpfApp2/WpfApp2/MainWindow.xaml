<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <!-- Si ponemos _ antes del carácter definimos que pulsando Alt+N por ejemplo salta a Nombre -->
            <Label Content="_Nombre:" Target="{Binding ElementName=txtName}" />
            <TextBox Name="txtName" Width="150" HorizontalAlignment="Left"/>
            <Label Content="_Mail:" Target="{Binding ElementName=txtMail}" />
            <TextBox Name="txtMail" Width="150" HorizontalAlignment="Left"/>

            <!-- Botón con ToolTip mejorado -->
            <Button Content="Enviar Datos" Margin="0, 30, 0, 0" Width="120" HorizontalAlignment="Left"
                    ToolTipService.ShowDuration="2000">
                <Button.ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <!-- Imagen del tooltip -->
                        <Image Source="/info.jpg" Width="24" Height="24" Margin="0,0,5,0"/>
                        <!-- Texto del tooltip -->
                        <TextBlock Text="Haz clic para enviar los datos al servidor." 
                                   VerticalAlignment="Center" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
