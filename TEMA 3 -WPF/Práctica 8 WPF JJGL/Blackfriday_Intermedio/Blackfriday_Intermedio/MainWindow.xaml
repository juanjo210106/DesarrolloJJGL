<Window x:Class="Blackfriday_Intermedio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackfriday_Intermedio"
        mc:Ignorable="d"
        Title="Calculadora de Descuentos" Height="300" Width="400">
    <StackPanel Margin="10">

        <Label FontWeight="Bold">Precio Original:</Label>
        <TextBox Name="txtPrecioOriginal" Margin="0,0,0,10" />

        <Label FontWeight="Bold">Selecciona el descuento:</Label>
        <RadioButton Name="rb10" GroupName="Descuento" Content="10%" IsChecked="True" />
        <RadioButton Name="rb20" GroupName="Descuento" Content="20%" />
        <RadioButton Name="rb30" GroupName="Descuento" Content="30%" Margin="0,0,0,20" />

        <Button Name="btnCalcular" Content="Calcular Precio Final" Click="btnCalcular_Click" />

    </StackPanel>
</Window>
