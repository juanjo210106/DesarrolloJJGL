<Window x:Class="NivelAvanzado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NivelAvanzado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <ListBox HorizontalAlignment="Center" x:Name="listBox">
            <ListBoxItem>Usuarios Añadidos: </ListBoxItem>
        </ListBox>
        <StackPanel Orientation="Horizontal">
            <Button Margin="20" Width="120" Height="30" Background="#8b21de" Foreground="White" FontWeight="Bold" Click="btnAgregar_Click">Agregar usuario</Button>
            <Button Margin="20" Width="100" Height="30" Background="white" Foreground="black" BorderBrush="#8b21de" BorderThickness="3" FontWeight="Bold" Click="btnSalir_Click">Salir</Button>
        </StackPanel>
    </StackPanel>
</Window>
