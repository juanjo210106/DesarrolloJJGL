<Window x:Class="NivelAvanzado.Ventana2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NivelAvanzado"
        mc:Ignorable="d"
        Title="Ventana2" Height="450" Width="800">
    <StackPanel Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Foreground="#8b21de" FontSize="24" FontWeight="Bold" Margin="20">+ Añadir Usuarios.</TextBlock>
        <Label>Nombre: </Label>
        <TextBox x:Name="txtNombre"></TextBox>

        <Label>Edad: </Label>
        <TextBox x:Name="txtEdad"></TextBox>

        <StackPanel Orientation="Horizontal" Margin="20">
            <Button Width="100" Height="30" Margin="0, 0, 20, 0" Background="#8b21de" Foreground="White" FontWeight="Bold" Click="btn_Aceptar">Aceptar</Button>
            <Button Width="100" Height="30" BorderBrush="#8b21de" BorderThickness="3" Background="white" Foreground="black" FontWeight="Bold" Click="btn_Cancelar">Cancelar</Button>
        </StackPanel>
    </StackPanel>
</Window>
