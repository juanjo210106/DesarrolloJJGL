<Window x:Class="VentanasEnlazadas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VentanasEnlazadas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label>Inserta tu nombre a continuación...:</Label>
        <TextBox Width="200" Height="20" HorizontalAlignment="Left" Name="MensajeTxt"></TextBox>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 20, 0, 0" Width="80" Click="Button_Click">Hacer click</Button>
    </StackPanel>
</Window>
