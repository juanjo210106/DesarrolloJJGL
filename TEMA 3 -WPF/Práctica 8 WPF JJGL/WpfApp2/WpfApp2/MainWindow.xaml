<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <Menu DockPanel.Dock="Top">

            <MenuItem Header="_Opción 1">
                <MenuItem.Icon>
                    <Image Source="/dating-app.png"></Image>
                </MenuItem.Icon>

                <MenuItem Header="Opción 1.1" Click="MenuItem_Click">
                    <MenuItem.Icon>
                        <Ellipse Fill="SkyBlue" Width="10" Height="10" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Opción 1.2" Click="MenuItem_Click">
                    <MenuItem.Icon>
                        <Ellipse Fill="SkyBlue" Width="10" Height="10" />
                    </MenuItem.Icon>
                </MenuItem>

                <Separator />

                <MenuItem Header="Opción 1.3" Click="MenuItem_Click">
                    <MenuItem.Icon>
                        <Ellipse Fill="SteelBlue" Width="10" Height="10" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Opción 2" Click="MenuItem_Click">
                <MenuItem.Icon>
                <Image Source="/app-del-clima.png"></Image>
                </MenuItem.Icon>

                <MenuItem Header="Opción 2.1" Click="MenuItem_Click">
                    <MenuItem.Icon>
                        <Ellipse Fill="LightGreen" Width="10" Height="10" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Opción 2.2 (Salir)" Click="MenuItem_Click">
                    <MenuItem.Icon>
                        <Ellipse Fill="Red" Width="10" Height="10" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

        </Menu>

        <Grid Background="#EEE" />

    </DockPanel>
</Window>
