<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="30">
            <Label>Nombre:</Label>
            <TextBlock Width="150" Background="AliceBlue" Name="txtNombre"></TextBlock>
            <Label>Apellido:</Label>
            <TextBlock Width="150" Background="AliceBlue" Name="txtApellido"></TextBlock>

            <Button Margin="0, 30, 0, 0" Click="Email_Click">Rellenar Email</Button>
        </StackPanel>
    </Grid>
</Window>
