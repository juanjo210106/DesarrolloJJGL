<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Comprobador DNI" Height="350" Width="600">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontFamily="Lucida Console" FontWeight="Bold" FontSize="24" Margin="0, 0, 0, 20" Foreground="SeaGreen">VALIDADOR DE DNI</TextBlock>
        <StackPanel Orientation="Horizontal">
            <Label>Introduce un DNI sin la letra: </Label>
            <TextBox Width="200" Margin="50, 0, 0, 0" MaxLength="8" x:Name="txtDni" TextChanged="txtDni_TextChanged" Background="AliceBlue" BorderBrush="AliceBlue"></TextBox>
        </StackPanel>
        <TextBox Margin="0, 30, 0, 0 " Height="140" x:Name="txtSalida">Introduce un DNI para comprobar la letra...</TextBox>
    </StackPanel>
</Window>
