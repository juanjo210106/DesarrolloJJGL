<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 40, 0, 0">
            <Label>Introduce la dimensión de la matriz:</Label>
            <TextBox Width="20" Margin="20, 0, 0, 0" x:Name="dimension" FontFamily="Consolas"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 20, 0, 0">
            <Button Height="20" Width="120" Click="btnInicializarMatriz">Inicializa matriz</Button>
            <StackPanel VerticalAlignment="Center" Margin="190, 0, 0, 0">
                <Button Margin="0, 0, 0, 20" Click="btnImprimirMatriz">Imprime matriz</Button>
                <Button>Imprime traspuest</Button>
            </StackPanel>
            
        </StackPanel>
        <TextBox x:Name="txtSalida" HorizontalAlignment="Center" Height="200" Width="580" Margin="0, 40, 0, 0"></TextBox>
    </StackPanel>
</Window>
