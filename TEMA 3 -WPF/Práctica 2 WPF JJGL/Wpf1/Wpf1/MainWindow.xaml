<Window x:Class="Wpf1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Grid>
        <TextBlock Margin="10" TextWrapping="Wrap" FontSize="16">
            
            <Run Foreground="Red">Este es un texto en rojo.</Run>
            <LineBreak/>
            
            <Run Foreground="Blue">Esta línea tiene una palabra </Run>
            <Run FontWeight="Bold" Foreground="Blue">negrita</Run>
            <Run Foreground="Blue"> y otras partes en azul.</Run>
            <LineBreak/>

            <Run Foreground="Green">Otra línea en color verde.</Run>
        </TextBlock>
    </Grid>
</Window>
