<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Border x:Name="FondoBorde" 
            BorderBrush="#01488e" 
            BorderThickness="5" 
            CornerRadius="10" 
            Padding="20" 
            Margin="20">

        <StackPanel VerticalAlignment="Center">

            <Button x:Name="btn1" Margin="0,5" Padding="10" Click="CambiarColor_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/rojo.png" Margin="0,0,10,0" Width="20"/>
                    <TextBlock FontWeight="Bold" Text="Cambiar a Rojo"/>
                </StackPanel>
            </Button>

            <Button x:Name="btn2" Margin="0,5" Padding="10" Click="CambiarColor_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/verde.png" Margin="0,0,10,0" Width="20"/>
                    <TextBlock FontWeight="Bold" Text="Cambiar a Verde"/>
                </StackPanel>
            </Button>

            <Button x:Name="btn3" Margin="0,5" Padding="10" Click="CambiarColor_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/morado.png" Margin="0,0,10,0" Width="20"/>
                    <TextBlock FontWeight="Bold" Text="Cambiar a Morado"/>
                </StackPanel>
            </Button>

        </StackPanel>
    </Border>
</Window>
