<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="120">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="60"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="Red">R:</TextBlock>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Grid.Row="1" Foreground="Green">G:</TextBlock>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Grid.Row="2" Foreground="Blue">B:</TextBlock>

        <Slider x:Name="sldRojo" VerticalAlignment="Center" Margin="12" Maximum="255" Grid.Row="0" Grid.Column="1" ValueChanged="CambiarColor"></Slider>
        <Slider x:Name="sldVerde" VerticalAlignment="Center" Margin="12" Maximum="255" Grid.Row="1" Grid.Column="1" ValueChanged="CambiarColor"></Slider>
        <Slider x:Name="sldAzul" VerticalAlignment="Center" Margin="12" Maximum="255" Grid.Row="2" Grid.Column="1" ValueChanged="CambiarColor"></Slider>

        <TextBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Grid.Row="0" Grid.Column="2" Margin="18" Text="{Binding ElementName=sldRojo, Path=Value, StringFormat=N0}" IsReadOnly="True"></TextBox>
        <TextBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Grid.Row="1" Grid.Column="2" Margin="18" Text="{Binding ElementName=sldVerde, Path=Value, StringFormat=N0}" IsReadOnly="True"></TextBox>
        <TextBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Grid.Row="2" Grid.Column="2" Margin="18" Text="{Binding ElementName=sldAzul, Path=Value, StringFormat=N0}" IsReadOnly="True"></TextBox>
    </Grid>
</Window>
