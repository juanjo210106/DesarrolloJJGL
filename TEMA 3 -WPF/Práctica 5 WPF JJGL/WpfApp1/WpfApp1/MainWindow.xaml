<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Formulario de Contacto" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Foreground="red" FontWeight="Bold" Padding="10" FontSize="18">Formulario de Contacto</TextBlock>

            <Label Padding="10, 10, 0, 0">Nombre</Label>
            <TextBox TextWrapping="Wrap" Width="300" HorizontalAlignment="Left" Margin="10,0,10,10" ></TextBox>

            <Label Padding="10, 10, 0, 0">Email</Label>
            <TextBox TextWrapping="Wrap" Width="300" HorizontalAlignment="Left" Margin="10,0,10,10" ></TextBox>

            <Button Content="Enviar" 
                    Width="100" 
                    HorizontalAlignment="Left" 
                    Margin="10,15,10,10" 
                    Background="#01488e" 
                    Foreground="White" 
                    FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        Margin="10,20,0,0">

                <Button Content="Limpiar" 
                        Width="100" 
                        Margin="0,0,10,0" />

                <Button Content="Cancelar" 
                        Width="100" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>