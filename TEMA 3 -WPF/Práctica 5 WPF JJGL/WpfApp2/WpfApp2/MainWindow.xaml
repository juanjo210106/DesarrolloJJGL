<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Ejercicio DockPanel" Height="450" Width="800">

    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">
                <MenuItem Header="_Abrir"/>
                <MenuItem Header="_Guardar"/>
                <Separator/>
                <MenuItem Header="_Salir"/>
            </MenuItem>
            <MenuItem Header="_Editar"/>
            <MenuItem Header="_Ayuda"/>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock>Listo</TextBlock>
            </StatusBarItem>
        </StatusBar>

        <StackPanel DockPanel.Dock="Left" 
                    Background="LightGray" 
                    Width="150">
            <Button Content="Opción 1" Margin="10"/>
            <Button Content="Opción 2" Margin="10"/>
            <Button Content="Opción 3" Margin="10"/>
        </StackPanel>

        <TextBlock Text="Este es el contenido principal que rellena el espacio."
                   FontSize="20"
                   TextWrapping="Wrap"
                   Background="Beige"
                   Padding="20"/>

    </DockPanel>
</Window>
